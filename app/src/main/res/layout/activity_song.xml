<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongActivity">

  <ImageView
      android:id="@+id/song_down"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:src="@drawable/btn_main_back_arrow"
      android:layout_margin="20dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>


  <TextView
      android:id="@+id/song_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="제목"
      android:textSize="25sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      app:layout_constraintTop_toBottomOf="@id/song_down"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/song_singer_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="가수 이름"
      android:textSize="25sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      app:layout_constraintTop_toBottomOf="@id/song_title"
      app:layout_constraintStart_toStartOf="@id/song_title"
      app:layout_constraintEnd_toEndOf="@id/song_title"
      app:constraintSet="@style/Platform.MaterialComponents"/>

  <ImageView
      android:id="@+id/img_song_album"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/img_album_exp2"
      android:layout_marginTop="20dp"
      app:layout_constraintTop_toBottomOf="@id/song_singer_name"
      app:layout_constraintStart_toStartOf="@id/song_singer_name"
      app:layout_constraintEnd_toEndOf="@id/song_singer_name"/>

  <TextView
      android:id="@+id/tv_lyric1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="나라는 꽃가루에"
      android:layout_marginTop="15dp"
      app:layout_constraintStart_toStartOf="@id/img_song_album"
      app:layout_constraintEnd_toEndOf="@id/img_song_album"
      app:layout_constraintTop_toBottomOf="@id/img_song_album" />

  <TextView
      android:id="@+id/tv_lyric2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="눈이 따끔해 아야"
      app:layout_constraintStart_toStartOf="@id/img_song_album"
      app:layout_constraintEnd_toEndOf="@id/img_song_album"
      app:layout_constraintTop_toBottomOf="@id/tv_lyric1"/>



  <SeekBar
      android:id="@+id/song_progress_sb"
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="20dp"
      android:background="@null"
      android:paddingStart="0dp"
      android:paddingEnd="0dp"
      android:progress="0"
      android:max="1000000"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_lyric2"/>

  <TextView
      android:id="@+id/song_start_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/song_progress_sb"
      app:layout_constraintTop_toBottomOf="@id/song_progress_sb"/>

  <TextView
      android:id="@+id/song_end_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="@id/song_progress_sb"
      app:layout_constraintTop_toBottomOf="@id/song_progress_sb"/>

  <ImageView
      android:id="@+id/song_miniplayer_btn"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginTop="20dp"
      android:visibility="visible"
      android:src="@drawable/btn_miniplay_pause"
      app:layout_constraintTop_toBottomOf="@id/song_progress_sb"
      app:layout_constraintStart_toStartOf="@id/img_song_album"
      app:layout_constraintEnd_toEndOf="@id/img_song_album"/>

  <ImageView
      android:id="@+id/song_pause_btn"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/btn_miniplayer_play"
      android:visibility="invisible"
      android:layout_marginTop="20dp"
      app:layout_constraintTop_toBottomOf="@id/song_progress_sb"
      app:layout_constraintStart_toStartOf="@id/img_song_album"
      app:layout_constraintEnd_toEndOf="@id/img_song_album"/>



</androidx.constraintlayout.widget.ConstraintLayout>